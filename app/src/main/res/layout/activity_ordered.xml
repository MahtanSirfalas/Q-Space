<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".stages.OrderedActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_ordered"
            tools:context=".stages.OrderedActivity"
            android:gravity="center" android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:background="@drawable/bg_gradient"
                                                           android:id="@+id/layoutbg"
                                                           android:focusableInTouchMode="true" android:focusable="true">
            <TextView
                    android:id="@+id/say1"
                    android:text="24"
                    android:textColor="@color/colorPurple"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="24sp"
                    android:layout_width="80dp" android:layout_height="80dp"
                    android:gravity="center"
                    android:fontFamily="@font/press_start_2p"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/say2" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textQ"
                    android:visibility="invisible"/>
            <TextView
                    android:id="@+id/say2"
                    android:text="47"
                    android:textSize="24sp"
                    android:textColor="@color/colorPurple"
                    android:textAlignment="center"
                    android:layout_width="80dp" android:layout_height="80dp"
                    android:gravity="center"
                    android:fontFamily="@font/press_start_2p" android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textQ"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/say1"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/say3"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" android:visibility="invisible"/>
            <TextView
                    android:id="@+id/say3"
                    android:text="70"
                    android:textSize="24sp"
                    android:textColor="@color/colorPurple"
                    android:textAlignment="center"
                    android:layout_width="80dp" android:layout_height="80dp"
                    android:gravity="center"
                    android:fontFamily="@font/press_start_2p" android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@id/textQ"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/say2"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/say4"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" android:visibility="invisible"/>
            <TextView
                    android:id="@+id/say4"
                    android:text="93"
                    android:textSize="24sp"
                    android:textColor="@color/colorPurple"
                    android:textAlignment="center"
                    android:layout_width="80dp" android:layout_height="80dp"
                    android:gravity="center"
                    android:fontFamily="@font/press_start_2p" android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@id/textQ"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/say3"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                    android:visibility="invisible"/>
            <TextView
                    android:text="What's the next number?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textQ"
                    android:textColor="@color/colorGreyLight" android:textSize="14sp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/say2"
                    app:layout_constraintBottom_toTopOf="@+id/tv_answer1"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/press_start_2p" android:visibility="invisible"/>
            <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc1_say1"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:visibility="invisible"/>
            <TextView
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc1_say2"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc1_say1"
                    app:layout_constraintCircleAngle="135"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc1_say1"
                    android:visibility="invisible"/>
            <TextView
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc1_say3"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc1_say1"
                    app:layout_constraintCircleAngle="225"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc1_say1"
                    android:visibility="invisible"/>
            <TextView
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc2_say1"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="invisible"/>
            <TextView
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc2_say2"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc2_say1"
                    app:layout_constraintCircleAngle="135"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc2_say1"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="invisible"/>
            <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc2_say3"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc2_say1"
                    app:layout_constraintCircleAngle="225"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc2_say1"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:visibility="invisible"/>
            <TextView
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc3_say1"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/uc1_say2"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_answer1"
                    android:visibility="invisible"/>
            <TextView
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc3_say2"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc3_say1"
                    app:layout_constraintCircleAngle="135"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc3_say1"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    android:visibility="invisible"/>
            <TextView
                    android:text="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc3_say3"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc3_say1"
                    app:layout_constraintCircleAngle="225"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc3_say1" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:visibility="invisible"/>
            <TextView
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc4_say1"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/uc2_say3"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_answer1"
                    android:visibility="invisible"/>
            <TextView
                    android:text=".?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc4_say2"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc4_say1"
                    app:layout_constraintCircleAngle="135"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc4_say1" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"/>
            <TextView
                    android:text="18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/uc4_say3"
                    android:textColor="@color/colorPurple" android:fontFamily="@font/press_start_2p"
                    app:layout_constraintCircle="@id/uc4_say1"
                    app:layout_constraintCircleAngle="225"
                    app:layout_constraintCircleRadius="48dp"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/uc4_say1" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:visibility="invisible"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_nextstage"
                    android:id="@+id/ib_next" android:background="@android:color/transparent"
                    android:tint="@color/colorSpaceWhite" android:layout_marginEnd="2dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textQ"
                    android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/buttAnswer1"
                    android:layout_marginTop="4dp" android:onClick="showNext" android:visibility="invisible"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_backstage"
                    android:id="@+id/ib_back" android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textQ" android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/buttAnswer1" android:tint="@color/colorSpaceWhite"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
                    android:onClick="showBack" android:visibility="invisible"/>
            <EditText
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/tv_answer1"
                    android:textColor="@color/colorSpaceWhite" android:textColorHighlight="@color/colorPurple"
                    android:textColorHint="@color/colorGreyLight" android:hint="..." android:textSize="24sp"
                    android:fontFamily="@font/press_start_2p" android:textAlignment="center" android:gravity="center"
                    android:textCursorDrawable="@color/colorGreyLight"
                    android:backgroundTint="@color/colorSpaceWhite"
                    app:layout_constraintTop_toBottomOf="@+id/textQ" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/buttAnswer1"
                    android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttAnswer1"
                    android:background="@drawable/custom_button_login" android:textColor="@color/colorSpaceWhite"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_answer1"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    android:onClick="slayButton"
                    android:fontFamily="@font/press_start_2p" android:textSize="12sp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/ibComment"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_starkayar"
                    android:id="@+id/iv_starKayar" android:tint="#FFEB3B"
                    android:visibility="gone"
                    android:rotation="60"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_answer1" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_starkayar"
                    android:id="@+id/iv_starKayar1" android:tint="#CDDC39" android:rotation="-135"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_answer1"/>
            <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp" app:srcCompat="@drawable/ic_yellowstar"
                    android:id="@+id/iv_yellowStar"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:visibility="gone" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_answer1"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:background="#0000"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_comments"
                    android:id="@+id/ibComment" android:tint="@color/colorSpaceWhite"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:onClick="showComments"
                    android:visibility="invisible" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttAnswer1"/>
            <androidx.constraintlayout.widget.Group android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:constraint_referenced_ids="say1,say2,say3,say4,textQ"
                                                    android:id="@+id/groupOrder" android:visibility="invisible"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline3"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Group android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:constraint_referenced_ids="uc1_say1,uc1_say2,uc1_say3,uc2_say1,uc2_say2,uc2_say3,uc3_say1,uc3_say2,uc3_say3,uc4_say1,uc4_say2,uc4_say3"
                                                    android:id="@+id/groupUcgen" android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/custom_comment"
                                                   android:padding="16dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_spacemedal" android:id="@+id/iv_spaceMedal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" tools:ignore="VectorDrawableCompat"
            android:tint="@color/colorPurple" app:tintMode="multiply"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"/>
    <TextView
            android:text="@string/congratulations"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_spaceMedal"
            android:fontFamily="@font/coda"
            android:textColor="@color/colorSpaceWhite" android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal" android:background="@color/colorSpace"/>
    <Button
            android:text="@string/show_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@id/butt_main_pop"
            android:background="@drawable/butt_profile_tabs"
            android:onClick="showComments" android:fontFamily="@font/coda" android:textSize="12sp"
            android:textColor="@color/colorSpaceWhite" app:layout_constraintEnd_toStartOf="@+id/butt_next_pop"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Next Stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butt_next_pop" android:onClick="showNext" android:fontFamily="@font/coda"
            android:textSize="12sp"
            android:background="@drawable/custom_butt_profile_tabs" android:textColor="@color/colorSpaceWhite"
            app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <Button
            android:text="Main Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/butt_main_pop"
            android:background="@drawable/butt_profile_tabs"
            android:fontFamily="@font/coda" android:textColor="@color/colorSpaceWhite"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textView" android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
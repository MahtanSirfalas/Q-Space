<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CommentActivity" android:background="@color/colorPrimaryDark">

    <ImageView
            android:id="@+id/qSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/recycleComment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg_info" />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleComment"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="0dp"
            android:layout_height="0dp" android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qSummary"
            app:layout_constraintBottom_toTopOf="@+id/sendCom" app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
            android:id="@+id/sendCom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" android:layout_marginBottom="2dp" android:gravity="center|center_vertical"
            android:background="@drawable/custom_ucomment">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttCom"
                android:ems="10"
                android:id="@+id/textCom" android:layout_weight="1"
                android:hint="@string/write_comment" android:maxLength="360"
                android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorGreyLight"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_marginStart="2dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_sendicon" android:id="@+id/buttCom"
                android:onClick="buttComms"
                android:background="@drawable/custom_button_login" android:minWidth="64dp"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_marginEnd="2dp"
                android:minHeight="42dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
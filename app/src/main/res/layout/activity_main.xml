<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main"
            tools:context=".MainActivity"
            android:gravity="center" android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" android:fillViewport="true" android:background="@color/colorPrimaryDark"
        >
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvName"
                        android:textColorHighlight="@color/colorPink" android:textColorHint="@color/colorSpaceWhite"
                        android:textColor="@color/colorSpaceWhite"
                        app:layout_constraintEnd_toStartOf="@+id/buttLogout"
                        app:layout_constraintTop_toTopOf="@+id/buttLogout"
                        app:layout_constraintBottom_toBottomOf="@+id/buttLogout"/>
                <Button
                        android:text="Log Out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/buttLogout"
                        android:onClick="signOut" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:background="@color/colorPrimaryDark"
                        android:textColor="@color/colorSpaceWhite" android:textColorHighlight="@color/colorPurple"
                        android:textColorHint="@color/colorSpaceWhite" android:layout_marginTop="4dp"
                        android:textAllCaps="false"/>
                <FrameLayout
                        android:id="@+id/fragment_holder"
                        android:layout_width="match_parent" android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/buttLogout"
                        app:layout_constraintBottom_toTopOf="@+id/buttDeneme">

                </FrameLayout>
                <Chronometer
                        android:id="@+id/view_timer"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        tools:targetApi="24"
                        android:textColor="@color/colorSpaceWhite"
                        android:textColorHint="@color/colorSpaceWhite"
                        android:layout_marginEnd="48dp"
                        app:layout_constraintEnd_toStartOf="@+id/buttDeneme" android:layout_marginBottom="36dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <Button
                        android:text="pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttDeneme"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="124dp" android:layout_marginBottom="80dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textDeneme"
                        android:textColor="@color/colorSpaceWhite" android:textColorHint="@color/colorSpaceWhite"
                        android:layout_marginEnd="96dp"
                        app:layout_constraintEnd_toStartOf="@+id/buttDeneme"
                        app:layout_constraintBottom_toTopOf="@+id/view_timer" android:layout_marginBottom="44dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
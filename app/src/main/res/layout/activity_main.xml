<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main"
            tools:context=".MainActivity"
            android:background="@drawable/gradient1"
            android:gravity="center" android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:background="@drawable/bg_gradient"
                                                               android:id="@+id/layoutbg">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/tvName"
                        android:background="@drawable/butt_login_enable"
                        android:textColorHighlight="@color/colorPink" android:textColorHint="@color/colorSpaceWhite"
                        android:textColor="@color/colorSpaceWhite"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_circle"
                        app:layout_constraintTop_toTopOf="@+id/iv_avatar_circle"
                        android:paddingStart="8dp" android:gravity="start|center_vertical"
                        android:paddingEnd="16dp" android:layout_marginEnd="18dp"
                        app:layout_constraintEnd_toStartOf="@+id/buttLogout"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp" android:layout_height="50dp"
                        android:id="@+id/iv_avatar_circle"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPurple"
                        android:translationZ="90dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="@+id/buttLogout"/>
                <Button
                        android:text="Log Out"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/buttLogout"
                        android:onClick="signOut"
                        android:background="@drawable/butt_login_enable"
                        android:textColor="@color/colorSpaceWhite" android:textColorHighlight="@color/colorPurple"
                        android:textColorHint="@color/colorSpaceWhite"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="@+id/iv_avatar_circle"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_circle"
                        app:layout_constraintEnd_toEndOf="parent" android:textAlignment="viewEnd"
                        android:layout_marginEnd="8dp" android:paddingEnd="8dp" android:fontFamily="@font/coda"/>

                <Button android:id="@+id/buttOyna"
                        android:text="Play"
                        android:textColor="@color/colorSpaceWhite"
                        android:background="@android:color/transparent"
                        android:layout_width="120dp"
                        android:layout_height="96dp"
                        android:fontFamily="@font/press_start_2p"
                        android:includeFontPadding="false" android:textAllCaps="false"
                        android:onClick="showLvl" android:gravity="right|top"
                        app:layout_constraintBottom_toTopOf="@id/buttProfil"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="96dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttLogout" android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp" app:srcCompat="@drawable/playbutton100"
                        android:id="@+id/ivPlay"
                        app:layout_constraintTop_toTopOf="@+id/buttOyna"
                        app:layout_constraintEnd_toEndOf="@+id/buttOyna"
                        app:layout_constraintBottom_toBottomOf="@+id/buttOyna"
                        app:layout_constraintStart_toStartOf="@+id/buttOyna" android:layout_marginEnd="24dp"/>

                <Button android:id="@+id/buttProfil"
                        android:text="Profile"
                        android:textColor="@color/colorSpaceWhite"
                        android:background="@android:color/transparent"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:fontFamily="@font/press_start_2p"
                        android:textAllCaps="false"
                        android:onClick="showProfile" android:gravity="top|left"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toTopOf="@id/buttSoru"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/buttOyna"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/buttOyna"/>
                <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp" app:srcCompat="@drawable/profilebutton100"
                        android:id="@+id/ivProfile"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/buttProfil"
                        app:layout_constraintEnd_toEndOf="@+id/buttProfil"
                        app:layout_constraintBottom_toBottomOf="@+id/buttProfil"
                        app:layout_constraintStart_toStartOf="@+id/buttProfil" android:layout_marginStart="24dp"/>

                <Button android:id="@+id/buttSoru"
                        android:text="Suggest_Q "
                        android:textColor="@color/colorSpaceWhite"
                        android:background="@android:color/transparent"
                        android:layout_width="120dp"
                        android:layout_height="104dp" android:fontFamily="@font/press_start_2p"
                        android:textAllCaps="false" android:gravity="top|left"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/buttInfo"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/buttProfil"
                        app:layout_constraintTop_toBottomOf="@+id/buttProfil"/>
                <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp" app:srcCompat="@drawable/jupiterbutt100"
                        android:id="@+id/ivSuggestQ"
                        app:layout_constraintEnd_toEndOf="@+id/buttSoru"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/buttSoru"
                        app:layout_constraintTop_toTopOf="@+id/buttSoru"
                        app:layout_constraintStart_toStartOf="@+id/buttSoru" android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"/>
                <Button android:id="@+id/buttInfo"
                        android:text="Info"
                        android:textColor="@color/colorSpaceWhite"
                        android:background="@android:color/transparent"
                        android:layout_width="120dp"
                        android:layout_height="96dp" android:fontFamily="@font/press_start_2p"
                        android:textAllCaps="false"
                        android:gravity="bottom|right"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivSuggestQ"
                        app:layout_constraintStart_toEndOf="@+id/buttSoru" android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp" app:srcCompat="@drawable/marsbutton100"
                        android:id="@+id/ivInfo"
                        app:layout_constraintEnd_toEndOf="@+id/buttInfo"
                        app:layout_constraintBottom_toBottomOf="@+id/buttInfo"
                        app:layout_constraintStart_toStartOf="@+id/buttInfo"
                        app:layout_constraintTop_toTopOf="@+id/buttInfo" android:layout_marginEnd="24dp"/>
                <!--<Chronometer-->
                <!--android:id="@+id/view_timer"-->
                <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                <!--tools:targetApi="24"-->
                <!--android:textColor="@color/colorSpaceWhite"-->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/list_stages" android:padding="4dp"
              android:gravity="center_horizontal">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/text1"
            android:textColor="@color/colorPink" android:fontFamily="@font/coda" android:textStyle="bold"
            android:textSize="16sp" android:text="Stage 1:" android:textAlignment="viewEnd" android:layout_weight="1"
            android:paddingRight="4dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/text2"
            android:textColor="@color/colorSpaceWhite" android:fontFamily="@font/coda" android:text="unfinished"
            android:textAlignment="viewStart" android:layout_weight="1"
            android:paddingLeft="4dp" android:textSize="16sp"/>
</LinearLayout>
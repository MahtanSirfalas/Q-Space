<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".stages.RandomActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_ordered"
            tools:context=".stages.RandomActivity"
            android:gravity="center" android:orientation="vertical">
        <ScrollView
                android:fillViewport="true" tools:context=".stages.RandomActivity"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:background="@drawable/bg_gradient"
                                                               android:id="@+id/layoutbg"
                                                               android:focusableInTouchMode="true"
                                                               android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ufo_q_human"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                            android:id="@+id/areaPark"
                            android:layout_width="200dp"
                            android:layout_height="240dp"
                            android:scaleType="fitXY"
                            android:tint="#EEFBFAF6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_dortbos" />

                    <ImageView
                            android:id="@+id/pet1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:tint="@color/yellowDark"
                            app:layout_constraintEnd_toEndOf="@id/areaPark"
                            app:layout_constraintTop_toTopOf="@+id/areaPark"
                            app:srcCompat="@drawable/ic_dortdolu" />

                    <ImageView
                            android:id="@+id/pet2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="24dp"
                            android:tint="#554835"
                            app:layout_constraintBottom_toBottomOf="@+id/areaPark"
                            app:layout_constraintEnd_toEndOf="@id/areaPark"
                            app:srcCompat="@drawable/ic_dortdolu" />

                    <ImageView
                            android:id="@+id/pet3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:tint="#503227"
                            app:layout_constraintStart_toStartOf="@id/areaPark"
                            app:layout_constraintTop_toTopOf="@+id/areaPark"
                            app:srcCompat="@drawable/ic_dortdolu" />

                    <ImageView
                            android:id="@+id/pet4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="#EDFBFAF6"
                            app:layout_constraintBottom_toBottomOf="@id/areaPark"
                            app:layout_constraintEnd_toEndOf="@id/areaPark"
                            app:layout_constraintStart_toStartOf="@+id/areaPark"
                            app:layout_constraintTop_toTopOf="@+id/areaPark"
                            app:srcCompat="@drawable/ic_dortdolu" />

                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:tint="#BCFBFAF6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_ucdolu" />

                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:tint="#EEFAE8A8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/areaPark"
                            app:srcCompat="@drawable/ic_ucdolu" />

                    <ImageView
                            android:id="@+id/ucgenSah"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:tint="#F0FBFAF6"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_ucdolu" />

                    <ImageView
                            android:id="@+id/karePet"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/colorGreyLight"
                            app:layout_constraintBottom_toBottomOf="@id/ucgenSah"
                            app:layout_constraintStart_toEndOf="@id/ucgenSah"
                            app:srcCompat="@drawable/ic_dortdolu" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:id="@+id/ninePackOptionLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/etAnswer"
                        app:layout_constraintEnd_toStartOf="@+id/ib_next"
                        app:layout_constraintStart_toEndOf="@+id/ib_back"
                        app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_obj_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="30sp" />

                        <TextView
                                android:id="@+id/tv_obj_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="A"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="30sp" />

                        <TextView
                                android:id="@+id/tv_obj_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="30sp" />

                        <TextView
                                android:id="@+id/tv_obj_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="B"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="30sp" />
                    </LinearLayout>

                    <RadioGroup
                            android:id="@+id/radioGugu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="32dp"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_butt_profile_tabs"
                                android:buttonTint="@color/colorSpaceWhite"
                                android:checked="true"
                                android:onClick="checkButton"
                                android:text="1"
                                android:textColor="@color/colorSpaceWhite"
                                android:textColorHighlight="@color/colorGreyLight"
                                android:textColorLink="@color/colorSpaceWhite" />

                        <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_butt_profile_tabs"
                                android:buttonTint="@color/colorSpaceWhite"
                                android:onClick="checkButton"
                                android:text="2"
                                android:textColor="@color/colorSpaceWhite"
                                android:textColorHighlight="@color/colorGreyLight"
                                android:textColorLink="@color/colorSpaceWhite" />

                        <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_butt_profile_tabs"
                                android:buttonTint="@color/colorSpaceWhite"
                                android:onClick="checkButton"
                                android:text="3"
                                android:textColor="@color/colorSpaceWhite"
                                android:textColorHighlight="@color/colorGreyLight"
                                android:textColorLink="@color/colorSpaceWhite" />

                        <RadioButton
                                android:id="@+id/radio4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_butt_profile_tabs"
                                android:buttonTint="@color/colorSpaceWhite"
                                android:onClick="checkButton"
                                android:text="4"
                                android:textColor="@color/colorSpaceWhite"
                                android:textColorHighlight="@color/colorGreyLight"
                                android:textColorLink="@color/colorSpaceWhite" />
                    </RadioGroup>

                    <TextView
                            android:id="@+id/tv_nineQ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/coda"
                            android:gravity="center"
                            android:text="@string/choose_not_included"
                            android:textColor="@color/colorSpaceWhite"
                            android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ninePackLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/tvRandom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_r11"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r12"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r13"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_r21"

                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r22"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r23"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_r31"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r32"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />

                        <TextView
                                android:id="@+id/tv_r33"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:background="@drawable/nine_pack_stroke"
                                android:fontFamily="@font/coda"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/colorSpaceWhite"
                                android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tvRandom"
                        android:inputType="number"
                        android:textColor="@color/colorSpaceWhite"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:textSize="36dp"
                        android:fontFamily="@font/coda" android:text="13" android:visibility="invisible"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvLabel"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/etAnswer"/>
                <TextView
                        android:text="@string/num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLabel"
                        android:textColor="@color/colorSpaceWhite" android:fontFamily="@font/coda"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvRandom"
                        android:textSize="24sp" android:visibility="invisible"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_nextstage"
                        android:id="@+id/ib_next" android:background="@android:color/transparent"
                        android:tint="@color/colorSpaceWhite"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:onClick="showNext" android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@+id/iv_yellowStar" android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toTopOf="@+id/etAnswer" android:layout_marginEnd="2dp"
                        android:layout_marginTop="4dp"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_backstage"
                        android:id="@+id/ib_back" android:background="@android:color/transparent"
                        android:tint="@color/colorSpaceWhite"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
                        android:onClick="showBack" android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@+id/iv_yellowStar" android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toTopOf="@+id/etAnswer" android:layout_marginTop="4dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberSigned"
                        android:backgroundTint="@color/colorSpaceWhite"
                        android:ems="10"
                        android:id="@+id/etAnswer" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvRandom"
                        android:textCursorDrawable="@color/colorGreyLight" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/buttAnswer" android:textColor="@color/colorSpaceWhite"
                        android:visibility="gone" android:gravity="center" android:textSize="28sp"
                        android:fontFamily="@font/coda"/>

                <Button
                        android:id="@+id/buttAnswer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_butt_stage"
                        android:fontFamily="@font/coda"
                        android:onClick="slayButton"
                        android:text="@string/send"
                        android:textColor="@color/colorSpaceWhite"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/ibComment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etAnswer" />

                <ProgressBar
                        android:id="@+id/progressBarRandom"
                        style="?android:attr/progressBarStyle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etAnswer"
                        app:layout_constraintBottom_toTopOf="@id/buttAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:background="@drawable/bg_ic_comment"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_comments"
                        android:id="@+id/ibComment" android:tint="@color/colorSpaceWhite"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:onClick="showComments"
                        android:visibility="invisible" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/buttAnswer"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_starkayar"
                        android:id="@+id/iv_starKayar" android:tint="#FFEB3B"
                        android:visibility="gone"
                        android:rotation="60"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/tvRandom" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_starkayar"
                        android:id="@+id/iv_starKayar1" android:tint="#CDDC39" android:rotation="-135"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/tvRandom"
                        app:layout_constraintHorizontal_bias="0.498"/>
                <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp" app:srcCompat="@drawable/ic_yellowstar"
                        android:id="@+id/iv_yellowStar"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:visibility="gone" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/tvRandom"
                        app:layout_constraintHorizontal_bias="0.498"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
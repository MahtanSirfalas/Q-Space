<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content" android:minWidth="240dp"
                                                   android:background="@drawable/custom_comment">

    <TextView
            android:text="You will sacrifice the points you will gain from this question, Are you sure?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_uSure" android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttYes"/>
    <Button
            android:text="Yes; Give Up!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttYes"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_uSure" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/buttNo"
            android:layout_marginEnd="8dp" android:background="@drawable/custom_giveup"
            android:textColor="@color/colorSpaceWhite" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6" android:layout_marginBottom="8dp"/>
    <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttNo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/buttYes"
            android:layout_marginStart="8dp" android:background="@drawable/custom_button_login"
            android:textColor="@color/colorSpaceWhite"
            app:layout_constraintTop_toTopOf="@+id/buttYes"
            app:layout_constraintBottom_toBottomOf="@+id/buttYes"/>
</androidx.constraintlayout.widget.ConstraintLayout>
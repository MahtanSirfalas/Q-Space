<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:background="#D00E0A20" android:padding="8dp">

    <TextView
            android:text="user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_player_name" android:textSize="20sp"
            android:textColor="@color/yellowDark"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_player_quote" android:textStyle="bold"
            android:fontFamily="@font/coda"/>
    <TextView
            android:text='says "Burada player alıntı olacak"'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_player_quote" android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/coda"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_name"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_name"
            app:layout_constraintStart_toStartOf="@+id/tv_player_name"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_player_level"
            android:background="@drawable/custom_comment" android:textStyle="italic" android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    <TextView
            android:text="is at Dactyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_player_level" android:textSize="18sp"
            android:textColor="@color/colorSpaceWhite" android:fontFamily="@font/coda"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_quote"
            app:layout_constraintStart_toStartOf="@+id/tv_player_quote" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_quote" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_player_points"/>
    <TextView
            android:text="has 1000 points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_player_points" android:textSize="18sp"
            android:textColor="@color/colorSpaceWhite" android:fontFamily="@font/coda"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_level"
            app:layout_constraintStart_toStartOf="@+id/tv_player_level" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_level" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_player_ups"/>
    <TextView
            android:text="has 2 Upvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_player_ups" android:textSize="18sp"
            android:textColor="@color/colorSpaceWhite" android:fontFamily="@font/coda"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_points"
            app:layout_constraintStart_toStartOf="@+id/tv_player_points" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_points" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>